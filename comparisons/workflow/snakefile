rule merge_tables:
    input:
        "data/misc/euk_filt_mergedDietAim1table_051523-Copy1.qza",
        "data/misc/euk_filt-mergedDietAim1rep-seqs_051523-Copy1.qza",
        "data/misc/filt_cecal_table.qza",
        "data/misc/all_cecal_rep_seqs.qza"
    output:
        "data/misc/comp_table.qza",
        "data/misc/comp_rep_seqs.qza"
    conda:
        "qiime2-2023.5"
    shell:
        """
        qiime feature-table merge \
            --i-tables ./data/misc/euk_filt_mergedDietAim1table_051523-Copy1.qza \
            --i-tables ./data/misc/filt_cecal_table.qza \
            --o-merged-table ./data/misc/comp_table.qza
        
        qiime feature-table merge-seqs \
            --i-data ./data/misc/euk_filt-mergedDietAim1rep-seqs_051523-Copy1.qza \
            --i-data ./data/misc/all_cecal_rep_seqs.qza \
            --o-merged-data ./data/misc/comp_rep_seqs.qza
        """


rule get_reference_databases:
    output:
        "databases/sepp-refs-silva-128.qza",
        "databases/silva-138-99-515-806-nb-classifier.qza"
    shell:
        """
        wget https://data.qiime2.org/2023.5/common/sepp-refs-silva-128.qza -P ./databases/
        wget https://data.qiime2.org/2023.5/common/silva-138-99-515-806-nb-classifier.qza -P ./databases/
        """


rule sepp_phylo_tree:
    input:
        "data/misc/comp_rep_seqs.qza",
        "databases/sepp-refs-silva-128.qza"
    output:
        "data/comp_qiime/tree.qza",
        "data/comp_qiime/placements.qza"
    conda:
        "qiime2-2023.5"
    shell:
        """
        qiime fragment-insertion sepp \
            --i-representative-sequences ./data/misc/comp_rep_seqs.qza \
            --i-reference-database ./databases/sepp-refs-silva-128.qza \
            --o-tree ./data/comp_qiime/tree.qza \
            --o-placements ./data/comp_qiime/placements.qza
        """


rule sepp_ASV_filtering:
    input:
        "data/misc/comp_table.qza",
        "data/comp_qiime/tree.qza"
    output:
        "data/comp_qiime/filt_comp_table.qza",
        "data/comp_qiime/rem_comp_table.qza"
    conda:
        "qiime2-2023.5"
    shell:
        """
        qiime fragment-insertion filter-features \
            --i-table ./data/misc/comp_table.qza \
            --i-tree ./data/comp_qiime/tree.qza \
            --o-filtered-table ./data/comp_qiime/filt_comp_table.qza \
            --o-removed-table ./data/comp_qiime/rem_comp_table.qza
        """


rule taxonomic_classification:
    input:
        "databases/silva-138-99-515-806-nb-classifier.qza",
        "data/misc/comp_rep_seqs.qza"
    output:
        "data/comp_qiime/taxonomy.qza"
    conda:
        "qiime2-2023.5"
    shell:
        """
        qiime feature-classifier classify-sklearn \
            --i-classifier ./databases/silva-138-99-515-806-nb-classifier.qza \
            --i-reads ./data/misc/comp_rep_seqs.qza \
            --o-classification ./data/comp_qiime/taxonomy.qza
        """

## rerun after total sum scaling
rule filter_taxonomy:
    input:
        "data/comp_qiime/filt_comp_table.qza",
        "data/comp_qiime/taxonomy.qza"
    output:
        "data/comp_qiime/taxonomy_filtered.qza",
        "data/comp_qiime/taxonomy_filtered.qzv"
    conda:
        "qiime2-2023.5"
    shell:
        """
        qiime taxa filter-table \
            --i-table ./data/comp_qiime/filt_comp_table.qza \
            --i-taxonomy ./data/comp_qiime/taxonomy.qza \
            --p-include p_ \
            --p-exclude mitochondria,chloroplast \
            --o-filtered-table ./data/comp_qiime/taxonomy_filtered.qza
        
        qiime feature-table summarize \
            --i-table ./data/comp_qiime/taxonomy_filtered.qza \
            --o-visualization ./data/comp_qiime/taxonomy_filtered.qzv
        """


rule create_lacto_table:
    input:
        "data/comp_qiime/filt_comp_table.qza",
        "data/comp_qiime/taxonomy.qza",
        "data/misc/comp_rep_seqs.qza"
    output:
        "data/comp_qiime/lacto_table.qza",
        "data/comp_qiime/lacto_rep_seqs.qza" 
    conda:
        "qiime2-2023.5"
    shell:
        """
        qiime taxa filter-table \
            --i-table ./data/comp_qiime/filt_comp_table.qza \
            --i-taxonomy ./data/comp_qiime/taxonomy.qza \
            --p-include Lactococcus \
            --o-filtered-table ./data/comp_qiime/lacto_table.qza
        
        qiime feature-table filter-seqs \
            --i-data ./data/misc/comp_rep_seqs.qza \
            --i-table ./data/comp_qiime/lacto_table.qza \
            --o-filtered-data ./data/comp_qiime/lacto_rep_seqs.qza
        """


rule convert_to_fasta:
    input:
        "data/comp_qiime/lacto_rep_seqs.qza"
    output:
        "data/comp_qiime/lactoOnly_rep_seqs.fasta"
    conda:
        "qiime2-2023.5"
    shell:
        """
        qiime tools export \
            --input-path ./data/comp_qiime/lacto_rep_seqs.qza \
            --output-path ./data/comp_qiime
        
        mv ./data/comp_qiime/dna-sequences.fasta ./data/comp_qiime/lactoOnly_rep_seqs.fasta
        """


rule total_sum_scaling:
    input:
        biom = "data/comp_qiime/filt_comp_table.qza",
        asvs = "data/comp_qiime/lactoOnly_rep_seqs.fasta"
    output:
        table = "data/misc/comp_tss_table.tsv"
    conda:
        "r_env"
    shell:
        """
        Rscript scripts/total_sum_scaling.R --biom {input.biom} \
                                            --sequence {input.asvs} \
                                            --output {output.table}
        """


rule tss_tsv2biom:
    input:
        "data/misc/comp_tss_table.tsv" 
    output:
        "data/misc/comp_tss_table.biom"
    conda:
        "qiime2-2023.5"
    shell:
        """
        biom convert \
            -i ./data/misc/comp_tss_table.tsv \
            -o ./data/misc/comp_tss_table.biom \
            --table-type "Table" \
            --to-hdf5
        """


rule tss_biom2qza:
    input:
        "data/misc/comp_tss_table.biom"
    output:
        "data/misc/comp_tss_table.qza"
    conda:
        "qiime2-2023.5"
    shell:
        """
        qiime tools import \
            --input-path ./data/misc/comp_tss_table.biom \
            --type 'FeatureTable[Frequency]' \
            --output-path ./data/misc/comp_tss_table.qza
        """


rule sepp_ASV_filtering2:
    input:
        "data/misc/comp_tss_table.qza",
        "data/comp_qiime/tree.qza"
    output:
        "data/comp_qiime/comp_tss_filt_table.qza",
        "data/comp_qiime/comp_tss_rem_table.qza"
    conda:
        "qiime2-2023.5"
    shell:
        """
        qiime fragment-insertion filter-features \
            --i-table ./data/misc/comp_tss_table.qza \
            --i-tree ./data/comp_qiime/tree.qza \
            --o-filtered-table ./data/comp_qiime/comp_tss_filt_table.qza \
            --o-removed-table ./data/comp_qiime/comp_tss_rem_table.qza
        """


rule filter_taxonomy2:
    input:
        "data/misc/comp_tss_table.qza",
        "data/comp_qiime/taxonomy.qza"
    output:
        "data/comp_qiime/tss_tax_filt.qza",
        "data/comp_qiime/tss_tax_filt.qzv"
    conda:
        "qiime2-2023.5"
    shell:
        """
        qiime taxa filter-table \
            --i-table ./data/misc/comp_tss_table.qza \
            --i-taxonomy ./data/comp_qiime/taxonomy.qza \
            --p-include p_ \
            --p-exclude mitochondria,chloroplast \
            --o-filtered-table ./data/comp_qiime/tss_tax_filt.qza
        
        qiime feature-table summarize \
            --i-table ./data/comp_qiime/tss_tax_filt.qza \
            --o-visualization ./data/comp_qiime/tss_tax_filt.qzv
        """


rule pre_core_metrics_filter:
    input:
        "data/comp_qiime/tss_tax_filt.qza",
        "data/misc/comp_metadata.tsv"
    output:
        "data/comp_qiime/tax_filt_actual.qza"
    conda:
        "qiime2-2023.5"
    shell:
        """
        qiime feature-table filter-samples \
            --i-table ./data/comp_qiime/tss_tax_filt.qza \
            --m-metadata-file ./data/misc/comp_metadata.tsv \
            --o-filtered-table ./data/comp_qiime/tax_filt_actual.qza
        """


rule core_metrics_analysis:
##  NEED TO CHECK THE SAMPLING DEPTH BEFORE YOU RUN THIS STEP
    input:
        "data/comp_qiime/tree.qza",
        "data/comp_qiime/tax_filt_actual.qza",
        "data/misc/comp_metadata.tsv"
    output:
        "data/core_outputs/bray_curtis_distance_matrix.qza",
        "data/core_outputs/bray_curtis_emperor.qzv",
        "data/core_outputs/bray_curtis_pcoa_results.qza",
        "data/core_outputs/evenness_vector.qza",
        "data/core_outputs/faith_pd_vector.qza",
        "data/core_outputs/jaccard_distance_matrix.qza",
        "data/core_outputs/jaccard_emperor.qzv",
        "data/core_outputs/jaccard_pcoa_results.qza",
        "data/core_outputs/observed_features_vector.qza",
        "data/core_outputs/rarefied_table.qza",
        "data/core_outputs/shannon_vector.qza",
        "data/core_outputs/unweighted_unifrac_distance_matrix.qza",
        "data/core_outputs/unweighted_unifrac_emperor.qzv",
        "data/core_outputs/unweighted_unifrac_pcoa_results.qza",
        "data/core_outputs/weighted_unifrac_distance_matrix.qza",
        "data/core_outputs/weighted_unifrac_emperor.qzv",
        "data/core_outputs/weighted_unifrac_pcoa_results.qza"
    conda:
        "qiime2-2023.5"
    shell:
        """
        qiime diversity core-metrics-phylogenetic \
            --i-phylogeny ./data/comp_qiime/tree.qza \
            --i-table ./data/comp_qiime/tax_filt_actual.qza \
            --p-sampling-depth  99631 \
            --m-metadata-file ./data/misc/comp_metadata.tsv \
            --o-rarefied-table ./data/core_outputs/rarefied_table.qza \
            --o-faith-pd-vector ./data/core_outputs/faith_pd_vector.qza \
            --o-observed-features-vector ./data/core_outputs/observed_features_vector.qza \
            --o-shannon-vector ./data/core_outputs/shannon_vector.qza \
            --o-evenness-vector ./data/core_outputs/evenness_vector.qza \
            --o-unweighted-unifrac-distance-matrix ./data/core_outputs/unweighted_unifrac_distance_matrix.qza \
            --o-weighted-unifrac-distance-matrix ./data/core_outputs/weighted_unifrac_distance_matrix.qza \
            --o-jaccard-distance-matrix ./data/core_outputs/jaccard_distance_matrix.qza \
            --o-bray-curtis-distance-matrix ./data/core_outputs/bray_curtis_distance_matrix.qza \
            --o-unweighted-unifrac-pcoa-results ./data/core_outputs/unweighted_unifrac_pcoa_results.qza \
            --o-weighted-unifrac-pcoa-results ./data/core_outputs/weighted_unifrac_pcoa_results.qza \
            --o-jaccard-pcoa-results ./data/core_outputs/jaccard_pcoa_results.qza \
            --o-bray-curtis-pcoa-results ./data/core_outputs/bray_curtis_pcoa_results.qza \
            --o-unweighted-unifrac-emperor ./data/core_outputs/unweighted_unifrac_emperor.qzv \
            --o-weighted-unifrac-emperor ./data/core_outputs/weighted_unifrac_emperor.qzv \
            --o-jaccard-emperor ./data/core_outputs/jaccard_emperor.qzv \
            --o-bray-curtis-emperor ./data/core_outputs/bray_curtis_emperor.qzv
        """


rule unzip_uw_distance_matrix:
    input:
        "data/core_outputs/unweighted_unifrac_distance_matrix.qza" 
    output:
        "data/core_outputs/uw_dist_matrix.tsv"
    conda:
        "qiime2-2023.5"
    shell:
        """
        qiime tools export \
            --input-path ./data/core_outputs/unweighted_unifrac_distance_matrix.qza \
            --output-path ./data/core_outputs/uw_dist_matrix
        
        mv ./data/core_outputs/uw_dist_matrix/distance-matrix.tsv \
        ./data/core_outputs/uw_dist_matrix/uw_dist_matrix.tsv

        mv ./data/core_outputs/uw_dist_matrix/uw_dist_matrix.tsv \
        ./data/core_outputs/
        """


